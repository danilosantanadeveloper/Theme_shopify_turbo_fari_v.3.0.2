<div class="okendo_review_carousel_container">
  <div class="okeReviews okeReviews--theme page-width section_c">
    <div class="over_view_c">
      <div id="stars_container"></div>
      <div class="subtext">{{ section.settings.subtext }}</div>
      <a class="btn reviewlink__btn" href="{{ section.settings.link }}">{{ section.settings.button_text}}</a>
    </div>
    <div class="reviews_c">
      <div class="bg-c">
        <img src="{{ 'reviews_bg.png' | asset_img_url: 'master' }}" />
      </div>
      <div class="review-part-c">
        <div data-oke-reviews-carousel data-oke-reviews-carousel-link="{{ section.settings.link }}" data-oke-reviews-carousel-heading="{{ section.settings.heading }}"></div>
      </div>
    </div>
  </div>
</div>
<script>
  window.onload = function(){
    setTimeout(function(){ 
      $('.okeReviews-reviewsCarousel-header').clone().appendTo('#stars_container');
    }, 3000);
  }
</script>
{% schema %}
{
    "name": "Okendo Reviews Carousel",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Please write the subtext here"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Label"
        }
    ],
    "presets": [
        {
            "name": "Okendo Reviews Carousel",
            "category": "Product"
        }
    ]
}
{% endschema %}
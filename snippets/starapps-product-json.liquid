{%- if product.id > 0 -%}
    <script type="application/json"{{" "}}{%- if starapps_attribute -%}{{ starapps_attribute }}="true"{%- else -%}sa-swatch-json="true"{%- endif -%}>
          {
            "id": {{ product.id | json }},
            "title": {{ product.title | json }},
            "handle": {{ product.handle | json }}{%- if starapps_app == "VIA" or product.variants.size <= 5 -%},
            "vendor": {{ product.vendor | json }},
            "variants": {{ product.variants | json }},
            "url": {{ product.url | json }},
            "options": {{ product.options_with_values | json }},
            "images": {{ product.images | json }},
            "featured_image": {{ product.featured_image | json }},
            "tags": {{ product.tags | json }},
            "available": {{ product.available | json }},
            "price_min": {{ product.price_min | json }},
            "price_max": {{ product.price_max | json }},
            "compare_at_price_min": {{ product.compare_at_price_min | json }},
            "compare_at_price_max": {{ product.compare_at_price_max | json }}{%- endif -%}{%- if starapps_app == "VIA" -%},
            "product_images": [{% for image in product.images %}{ "id":{{ image.id }},"src":{{ image | json }} } {% unless forloop.last %} , {% endunless %} {% endfor %}],
            "media": {{ product.media | json }}{%- endif -%}
          }
    </script>
    {%- endif -%}